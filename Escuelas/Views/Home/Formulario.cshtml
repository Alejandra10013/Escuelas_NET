@{
    ViewData["Title"] = "Formulario";
}
<h2>Formulario</h2>
<fieldset>
    <legend> Formulario Mantendor de Profesores</legend>
    @using (@Html.BeginForm("Guardar", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {

        <div class="form-group">
            <span class="col-md-2">
                Rut
            </span>
            <span class="col-md-6">
                @Html.TextBox("rut", null, new { @class = "form-control", placeholder = "es un rut" })
            </span>
        </div>
        <div class="form-group">
            <span class="col-md-2">
                Nombre
            </span>
            <span class="col-md-6">
                @Html.TextBox("nombre", null, new { @class = "form-control", placeholder = "es un rut" })
            </span>
        </div>
        <div class="form-group">
            <span class="col-md-2">
                Titulo
            </span>
            <span class="col-md-6">
                @Html.TextBox("titulo", null, new { @class = "form-control", placeholder = "es un rut" })
            </span>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Grado
            </span>
            <span class="col-md-6">
                @Html.DropDownList("grado", new List<SelectListItem>
                   {
                       new SelectListItem{Text="Tecnico Superior", Value="Tecnico Superior"},
                       new SelectListItem{Text="Ingenierio", Value="Ingeniero"},
                       new SelectListItem{Text="Magister", Value="Magister"},
                       new SelectListItem{Text="Doctor", Value="Doctor"}
                   },
                   new { @class = "form-control" }
                   )
            </span>
        </div>
        <div class="form-control">
            <button type="submit" class="btn btn-primary">Enviar formulario</button>
        </div>

    }

</fieldset>